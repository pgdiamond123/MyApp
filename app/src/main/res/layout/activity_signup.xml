<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context="nnthien.com.myapp.SignupActivity">

    <ImageView
        android:id="@+id/image_signup"
        android:src="@drawable/pro"
        android:layout_centerHorizontal="true"
        android:layout_height="150dp"
        android:layout_width="wrap_content"/>

    <LinearLayout
        android:id="@+id/group_signup"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_below="@+id/image_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Register"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/signup_editfullname"
                android:hint="Fullname"
                android:background="#804E4467"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:padding="7dp"
                android:drawableLeft="@drawable/ic_assignment_ind_black_24dp"
                android:drawablePadding="16dp"
                android:drawableTint="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/signup_editLogin"
                android:hint="Username"
                android:background="#804E4467"
                android:layout_marginTop="7dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:padding="7dp"
                android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                android:drawablePadding="16dp"
                android:drawableTint="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/signup_editPassword"
                android:inputType="textPassword"
                android:hint="Password"
                android:layout_marginTop="7dp"
                android:background="#804E4467"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:padding="7dp"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:drawablePadding="16dp"
                android:drawableTint="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/signup_editemail"
            android:hint="Email"
            android:layout_marginTop="7dp"
            android:background="#804E4467"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:padding="7dp"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="16dp"
            android:inputType="textEmailAddress"
            android:drawableTint="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/signup_editphone"
            android:hint="Phone"
            android:layout_marginTop="7dp"
            android:background="#804E4467"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:padding="7dp"
            android:inputType="number"
            android:drawableLeft="@drawable/ic_phone_iphone_black_24dp"
            android:drawablePadding="16dp"
            android:drawableTint="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/signup_btnSignup"
            android:background="#C0F62E69"
            android:text="Sign up"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/signup_btnLogin"
            android:background="#C0A0C0CA"
            android:text="Login"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"/>
    </LinearLayout>


</RelativeLayout>
