<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nnthien.com.myapp.ChangePasswordFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background"
        tools:context="nnthien.com.myapp.SignupActivity">

        <ImageView
            android:id="@+id/image_signup"
            android:src="@drawable/pro"
            android:layout_centerHorizontal="true"
            android:layout_height="150dp"
            android:layout_width="wrap_content"/>

        <LinearLayout
            android:id="@+id/group_signup"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_below="@+id/image_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Change password"
                android:textColor="@android:color/white"
                android:layout_marginBottom="10dp"/>


            <EditText
                android:id="@+id/change_editOldPassword"
                android:inputType="textPassword"
                android:hint="Old Password"
                android:layout_marginTop="7dp"
                android:background="#804E4467"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:padding="7dp"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:drawablePadding="16dp"
                android:drawableTint="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/change_editPassword"
                android:inputType="textPassword"
                android:hint="Password"
                android:layout_marginTop="7dp"
                android:background="#804E4467"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:padding="7dp"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:drawablePadding="16dp"
                android:drawableTint="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/change_editConfirmPassword"
                android:inputType="textPassword"
                android:hint="Confirm Password"
                android:layout_marginTop="7dp"
                android:background="#804E4467"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:padding="7dp"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:drawablePadding="16dp"
                android:drawableTint="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/change_btnChange"
                android:background="#C0F62E69"
                android:text="Change password"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Button.Borderless"/>

        </LinearLayout>


    </RelativeLayout>


</FrameLayout>
